---
// filepath: /src/components/LinkItem.astro
const { href, label, icon, description } = Astro.props;
---

<a
  href={href}
  class="block rounded-xl px-6 py-3 text-lg md:text-xl text-center font-bold border-2 border-blue-600 hover:border-blue-700 text-white focus:outline-none"
  aria-label={label}
>
  <div class="inline-block mb-2" set:html={icon}></div>
  {label}
  <p class="text-sm text-gray-400 mt-2">{description}</p>
</a>